#!/bin/bash -

set -o nounset                                  # Treat unset variables as an error
if [[ "$1" == "x" ]]; then
  echo "Usage: mpvy <playlist_id>"
else
  #title=`youtube-dl --skip-download --get-title $1`
  #mpv --no-video --term-playing-msg "### $title ###" $1
  mpv --quiet --log-file=${HOME}/log/mpv_$(date +%Y%m%d_%H%M).log --no-video --shuffle --term-playing-msg='Title: ${media-title}' https://www.youtube.com/playlist\?list=${1}
fi
