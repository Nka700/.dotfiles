${hr}
${texeci 1800 curl -s 'http://wttr.in/tokyo?0' | sed -n '3,7{s/\d27\[[0-9;]*m//g;s/^..//;s/ *$//;p}'}

${color1}${alignc}T I M E
${hr}
UTC:${alignr}${utime %Y/%m/%d %H:%M}
#JST:${alignr}${time %Y/%m/%d %H:%M}
