conky.config = {
background=true,
update_interval=1,
double_buffer=true,
no_buffers=true,
imlib_cache_size=10,

--Graphical
border_inner_margin = 10,
border_outer_margin = 2,
border_width = 1,
default_bar_width = 220,
default_bar_height = 10,
default_gauge_height = 40,
default_gauge_width = 40,
default_graph_height = 50,
default_graph_width = 153,
default_shade_color = '#1c2023',
default_outline_color = '#1c2023',
draw_borders = false,
draw_graph_borders = false,
draw_shades = true,
draw_outline = true,

gap_x=10,
gap_y=-300,

alignment="middle_left",
minimum_height=400,
minimum_width=0,

--Windows
own_window = true,
own_window_argb_value = 60,
own_window_argb_visual = true,
own_window_class = 'Conky',
own_window_colour = '#000000',
own_window_hints = 'undecorated,below,above,sticky,skip_taskbar,skip_pager',
own_window_transparent = false,
own_window_title = 'system_conky',
own_window_type = 'desktop',
own_window_argb_visual=true,
own_window_argb_value=0,

--Textual
format_human_readable = true,
font="Droid Sans:size=10",
max_text_width = 0,
max_user_text = 16384,
override_utf8_locale = true,
short_units = true,
top_name_width = 21,
top_name_verbose = false,
uppercase = false,
use_spacer = 'none',
use_xft = true,
xftalpha = 1,
text_buffer_size=256,
default_color='#1c2023',
color1='#a4a4a4',
};

conky.text = [[
${font Source Code Pro:style=Regular:size=45}${color1}\
${time %H:%M}\
${font Source Code Pro:style=Regular:size=15}${color1}\
${time %p}
${voffset -10}
${voffset -30}
${font Source Code Pro:style=Regular:size=20}${color1}\
${time %Y/%m/%d}\
${voffset -5}
${font Source Code Pro:style=Regular:size=15}${color1}\
Storage: ${fs_free /} free
CPU0 : ${cpu cpu0}% , ${freq 0}MHz
CPU1 : ${cpu cpu1}% , ${freq 1}MHz
${voffset -5}
${font Source Code Pro:style=Regular:size=10}${color1}\
${color1}${alignc}T O P
${hr}
ProcessName                PID     CPU%
${top name 1} ${top pid 1}   ${top cpu 1}%
${top name 2} ${top pid 2}   ${top cpu 2}%
${top name 3} ${top pid 3}   ${top cpu 3}%
]];

