conky.config = {
background=true,
update_interval=1,
double_buffer=true,
no_buffers=true,
imlib_cache_size=10,

--Graphical
border_inner_margin = 10,
border_outer_margin = 2,
border_width = 1,
default_bar_width = 220,
default_bar_height = 10,
default_gauge_height = 25,
default_gauge_width = 40,
default_graph_height = 40,
default_graph_width = 153,
default_shade_color = '#1c2023',
default_outline_color = '#1c2023',
draw_borders = false,
draw_graph_borders = false,
draw_shades = true,
draw_outline = true,

gap_x=10,
gap_y=-100,

alignment="bottom_left",
minimum_height=500,
minimum_width=0,

--Windows
own_window = true,
own_window_argb_value = 255,
own_window_argb_visual = true,
own_window_class = 'conky',
own_window_colour = '#2b2b2b',
own_window_hints = 'undecorated,below,above,sticky,skip_taskbar,skip_pager',
own_window_transparent = false,
own_window_title = 'system_conky',
own_window_type = 'override',
own_window_argb_visual=true,

--Textual
format_human_readable = true,
font="Droid Sans:size=10",
max_text_width = 0,
max_user_text = 16384,
override_utf8_locale = true,
short_units = true,
top_name_width = 21,
top_name_verbose = false,
uppercase = false,
use_spacer = 'none',
use_xft = true,
xftalpha = 1,
text_buffer_size=256,
default_color='#1c2023',

--Colors (Nord)
default_color = '#1c2023',
color0 = '#B48EAD',
color1 = '#D8DEE9',
color2 = '#88C0D0',
color3 = '#EBCB8B',
};

conky.text = [[
${color1}${font Source Code Pro:style=Regular:size=45}\
${time %H:%M}${color}\
${color1}${font Source Code Pro:style=Regular:size=15}\
${time %p}${color}
${voffset -10}
${voffset -30}
${color0}${font Source Code Pro:style=Regular:size=20}\
${time %Y/%m/%d}${color}\
${voffset -5}
${color1}${font Source Code Pro:style=Regular:size=15}\
Storage: ${fs_free /} free
CPU0 : ${cpu cpu0}% , ${freq 0}MHz
CPU1 : ${cpu cpu1}% , ${freq 1}MHz${color}
${voffset -5}
${color1}${font Source Code Pro:style=Regular:size=10}${color}\
${color0}${alignc}T O P
${hr}${color}
${color1}ProcessName                PID     CPU%${color}
${color1}${top name 1} ${top pid 1}   ${top cpu 1}%
${top name 2} ${top pid 2}   ${top cpu 2}%
${top name 3} ${top pid 3}   ${top cpu 3}%${color}
]];

