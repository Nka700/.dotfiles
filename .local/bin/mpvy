#!/bin/bash -
#===============================================================================
#
#          FILE: mpvy
#
#         USAGE: mpvy
#
#   DESCRIPTION: 
#
#       OPTIONS: ---
#  REQUIREMENTS: ---
#          BUGS: ---
#         NOTES: ---
#        AUTHOR: YOUR NAME (), 
#  ORGANIZATION: 
#       CREATED: 2021年12月05日 23時58分58秒
#      REVISION:  ---
#===============================================================================

set -o nounset                                  # Treat unset variables as an error
if [[ "$1" == "x" ]]; then
  echo "Usage: mpvy <playlist_id>"
else
  mpv --log-file=${HOME}/log/mpv_$(date +%Y%m%d_%H%M).log --no-video --shuffle --term-playing-msg='Title: ${media-title}' --user-agent="Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36" https://www.youtube.com/playlist\?list=${1}
fi
